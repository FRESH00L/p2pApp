doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Create New Transaction
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
  
  body
    .container.mt-4
      h2.text-center Create New Transaction



      form#transaction-form(method='POST', action='/transactions/new', class='w-50 mx-auto')
        .form-group
          label(for='reciver_name') Recipient Name:
          input#reciver_number.form-control(type='text', name='reciver_name', placeholder='Enter recipient name', required)
        
        .form-group
          label(for='amount') Amount:
          input#amount.form-control(type='number', name='amount', placeholder='Enter amount', required, min='1')
        
        .form-group
          label(for='text') Description (optional):
          input#text.form-control(type='text', name='text', placeholder='Enter transaction description')

        // Hidden password field (filled by JS)
        input#password(type='hidden', name='password')

        button.btn.btn-primary.btn-block(type='button', id='proceedButton') Proceed


    script(src='/javascripts/transaction.js')
