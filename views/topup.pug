head
  meta(charset='utf-8')
  title Top Up Account
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

body
  .container
    h2 Top Up Your Account
    p Balance: #{user.balance}

    // Form to top-up balance
    form(method='POST', action='/users/top-up')
      .form-group
        label(for='amount') Amount to add:
        input#amount.form-control(type='number', name='amount', placeholder='Enter amount' required)

      button.btn.btn-primary(type='submit') Top Up Account
